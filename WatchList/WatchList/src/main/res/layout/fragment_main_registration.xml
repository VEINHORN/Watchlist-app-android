<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/background"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin">

    <RelativeLayout
        android:background="@drawable/registration_form_background"
        android:layout_width="500dp"
        android:layout_height="600dp"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">
        <LinearLayout
            android:layout_marginTop="20dp"
            android:id="@+id/registration_title_layout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true">
            <TextView
                android:textSize="45sp"
                android:textStyle="bold"
                android:id="@+id/section_label"
                android:textColor="@color/registration_app_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fragment_main_watchlist_title"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/registration_email_layout"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/registration_title_layout">
            <EditText
                android:hint="@string/fragment_registration_email_start_text"
                android:textColorHint="@color/registration_email_start_text_color"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:minWidth="400dp"
                android:clickable="true"
                android:textColor="@color/registration_email_text_color"
                android:textSize="35sp"
                android:textStyle="bold"
                android:inputType="textEmailAddress"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/registration_nickname_layout"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/registration_email_layout">
            <EditText
                android:hint="@string/fragment_registration_nickname_start_text"
                android:textColorHint="@color/registration_email_start_text_color"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:minWidth="400dp"
                android:clickable="true"
                android:textColor="@color/registration_email_text_color"
                android:textSize="35sp"
                android:textStyle="bold"
                android:inputType="textEmailAddress"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/registration_password_layout"
            android:layout_marginTop="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/registration_nickname_layout">
            <EditText
                android:hint="@string/fragment_registration_password_start_text"
                android:textColorHint="@color/registration_email_start_text_color"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:minWidth="400dp"
                android:clickable="true"
                android:textColor="@color/registration_email_text_color"
                android:textSize="35sp"
                android:textStyle="bold"
                android:inputType="textEmailAddress"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/registration_password_layout">
            <Button
                android:background="@drawable/registration_login_button_selector"
                android:minWidth="400dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Log in"
                android:textSize="35sp"/>
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>
