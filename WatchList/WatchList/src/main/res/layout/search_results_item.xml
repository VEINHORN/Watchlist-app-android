<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:layout_width="wrap_content"
    android:orientation="vertical"
    android:background="@drawable/search_results_item_selector">
    <RelativeLayout
        android:descendantFocusability="blocksDescendants"
        android:layout_marginTop="10dp"
        android:background="@drawable/search_results_info_module"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:descendantFocusability="blocksDescendants"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="5dp"
            android:layout_marginBottom="5dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/relativeLayout">
            <com.makeramen.RoundedImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:minHeight="150dp"
                android:minWidth="100dp"
                android:layout_margin="3dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/search_results_poster"
                app:corner_radius="3dp"/>
            <!--
            <ImageView
                android:layout_margin="3dp"
                android:background="@drawable/empty_movie"
                android:id="@+id/search_results_poster"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:minHeight="150dp"
                android:minWidth="100dp"/>
                -->
        </RelativeLayout>
        <RelativeLayout
            android:descendantFocusability="blocksDescendants"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/relativeLayout"
            android:layout_alignBottom="@+id/relativeLayout"
            android:id="@+id/relativeLayout2"
            android:layout_alignParentRight="true">
            <TextView
                android:id="@+id/search_results_title"
                android:textSize="30sp"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Iron Man"/>

            <TextView
                android:id="@+id/search_results_release_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="November 23 2012"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_below="@+id/search_results_title"
                android:layout_alignParentLeft="true" />

            <LinearLayout
                android:descendantFocusability="blocksDescendants"
                android:layout_marginTop="15dp"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/search_results_release_date"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <com.watchlistapp.ratingbar.ColoredRatingBar
                        android:id="@+id/search_results_rating_bar"
                        style="@style/coloredRatingBarStyle"
                        app:rating="3"
                        app:indicator="false"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"/>
                </LinearLayout>

                <LinearLayout
                    android:descendantFocusability="blocksDescendants"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:background="@drawable/search_results_votes_and_rating_background"
                    android:layout_marginLeft="5dp">
                    <TextView
                        android:layout_margin="3dp"
                        android:textColor="@color/search_results_votes_and_rating_text_color"
                        android:id="@+id/search_results_rating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Start rating"
                        android:textStyle="bold"
                        android:textSize="20sp"/>
                </LinearLayout>
            <LinearLayout
                android:descendantFocusability="blocksDescendants"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:background="@drawable/search_results_votes_and_rating_background">
                <TextView
                    android:layout_margin="3dp"
                    android:textColor="@color/search_results_votes_and_rating_text_color"
                    android:id="@+id/search_results_votes"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="35 Votes"
                    android:textStyle="bold"
                    android:textSize="20sp"/>
            </LinearLayout>

            </LinearLayout>
        </RelativeLayout>
    </RelativeLayout>
    <LinearLayout
        android:descendantFocusability="blocksDescendants"
        android:background="@drawable/search_results_button_panel"
        android:layout_marginBottom="10dp"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/search_results_activity_add_to_list_button"
            android:layout_margin="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/watchlist"/>
        <ImageButton
            android:layout_margin="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/favourite"/>
        <ImageButton
            android:id="@+id/search_results_activity_amazon_button"
            android:layout_margin="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/amazon"/>
        <ImageButton
            android:layout_margin="3dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/itunes"/>
    </LinearLayout>
</LinearLayout>
