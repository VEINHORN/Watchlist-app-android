<resources>

    <!-- Login EditText style -->
    <style name="LoginEditTextStyle">
        <item name="android:paddingLeft">5dp</item>
        <item name="android:paddingBottom">3dp</item>
        <item name="android:paddingTop">3dp</item>
        <item name="android:textColor">#BDBDBD</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColorHint">@color/registration_email_start_text_color</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:background">@drawable/bg_input_group</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <!-- Customize your theme here. -->
    </style>

    <!-- Rating bar style -->
    <style name="coloredRatingBarStyle">
        <item name="indicator">false</item>
        <item name="type">normal</item>
    </style>

    <style name="coloredRatingBarStyleIndicator">
        <item name="indicator">true</item>
        <item name="type">normal</item>
    </style>

    <style name="coloredRatingBarStyleSmall">
        <item name="indicator">false</item>
        <item name="type">small</item>
    </style>

    <style name="coloredRatingBarStyleSmallIndicator">
        <item name="indicator">true</item>
        <item name="type">small</item>
    </style>
    <!-- End -->
</resources>
