<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    package="com.watchlistapp"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="9"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.watchlistapp.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.watchlistapp.RecentActivity"
            android:label="@string/title_activity_recent" >
        </activity>
        <activity
            android:name="com.watchlistapp.authorization.LogInActivity"
            android:label="@string/title_activity_login"
            android:windowSoftInputMode="stateHidden"> <!-- |adjustResize -->
        </activity>
        <activity
            android:name="com.watchlistapp.searchresults.SearchResultsActivity"
            android:label="@string/title_activity_search_results" >
        </activity>
        <activity
            android:name="com.watchlistapp.PopularActivity"
            android:label="@string/popular_activity_label" />
        <activity
            android:name="com.watchlistapp.comingsoon.ComingSoonActivity"
            android:label="@string/coming_soon_activity_label" />
        <activity
            android:name=".home.HomeActivity"
            android:label="@string/title_activity_home">
        </activity>
        <activity
            android:name="com.watchlistapp.movielist.MovieListActivity"
            android:label="@string/title_activity_movie_list" >
        </activity>
        <activity
            android:name="com.watchlistapp.fullmoviedescription.FullMovieDescriptionActivity"
            android:label="@string/title_activity_full_movie_description" >
        </activity>
        <activity
            android:name="com.watchlistapp.movielist.GenreMovieListActivity"
            android:label="Genre list" />
        <activity
            android:name=".fullmoviedescription.fullposter.FullPosterViewActivity"
            android:label="Full poster view activity" />
        <activity
            android:name="com.watchlistapp.fullmoviedescription.FullActorDescriptionActivity"
            android:label="@string/title_activity_full_actor_description" >
        </activity>
        <activity
            android:name=".profile.ProfileActivity"
            android:label="@string/profile_activity_title">
        </activity>
        <activity
            android:name=".amazon.AmazonActivity"
            android:label="@string/amazon_activity_title">
        </activity>
        <activity android:name=".itunes.ITunesActivity"
            android:label="@string/itunes_activity_title"/>
    </application>
</manifest>
